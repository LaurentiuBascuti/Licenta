<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dev.lawrence.licenta_poo.WelcomeScreen">

    <ImageView
        android:id="@+id/backg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/elearningImg"
        android:layout_width="320dp"
        android:layout_height="202dp"
        android:layout_marginLeft="92dp"
        android:foregroundGravity="right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/elearning" />

    <ImageView
        android:id="@+id/bookImg"
        android:layout_width="209dp"
        android:layout_height="142dp"
        android:layout_marginTop="608dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/carte" />

    <ImageView
        android:id="@+id/boiImg"
        android:layout_width="164dp"
        android:layout_height="288dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="376dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/boiiii" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="410dp"
        android:layout_height="600dp"
        android:text="PROGRAMAREA ORIENTATA OBIECT PRIN JOCURI"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="28dp"
        android:gravity="center"/>

</android.support.constraint.ConstraintLayout>
